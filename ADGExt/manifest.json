{
  "manifest_version": 3,
  "name": "AdGuard Home Manager",
  "version": "0.1.0",
  "description": "Manage your local AdGuard Home installations directly from your browser",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "service_worker": "background/background.js"
  }
} 